<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.haji.mycontentprovider.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textView_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/txtView_title_main"
            android:textSize="25dp"
            android:layout_marginBottom="50dp" />


        <Button
        android:id="@+id/button_showItem_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_show_main" />



        <Button
            android:id="@+id/button_addItem_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_add_main" />

        <Button
            android:id="@+id/button_editItem_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_edit_main" />



    </LinearLayout>


</ScrollView>
